<div class="py-5 gradient-overlay bg-secondary">
    <div class="container">
        <div class="row">
            <div class="col-md-2"> </div>
            <div class="col-md-8">
                <div class="card bg-white text-black p-5">
                    <div class="card-body">
                        <h1 class="mb-4 text-center">Iniciar Sesion</h1>
                        <form name="mainForm" data-ng-submit="login()" data-ng-controller="login" ng-model="logins">
                            <div class="form-group">
                                <label>Tu Correo Electronico</label>
                                <input type="email" class="form-control" placeholder="Correo Electronico" ng-model="logins.correo_electronico_persona">
                                <div flex layout-padding ng-show="respuesta.aviso">{{respuesta.aviso}}</div>
                            </div>
                            <div class="form-group">
                                <label>Tu Contraseña</label>
                                <input type="password" class="form-control" placeholder="Contraseña" ng-model="logins.clave_persona">
                            </div>
                            <button type="submit" class="btn btn-block btn-lg btn-success">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>